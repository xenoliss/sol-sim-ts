{
  "name": "simulator-ts",
  "version": "1.0.0",
  "description": "Solana transaction simulator using litesvm and @solana/kit - TypeScript implementation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcm-runner": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "solana",
    "simulator",
    "litesvm",
    "blockchain",
    "mcm",
    "multisig"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/borsh": "^0.31.1",
    "@noble/hashes": "^1.5.0",
    "@solana/kit": "^2.1.2",
    "@solana/web3.js": "^1.95.8",
    "litesvm": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
